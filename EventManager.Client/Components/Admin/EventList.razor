<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Event Start</th>
            <th>Event End</th>
            <th>Maximum Attendees</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var evnt in Events)
        {
                <tr>
                    <td>@evnt.Name</td>
                    <td>@evnt.Description</td>
                    <td>@evnt.StartTime</td>
                    <td>@evnt.EndTime</td>
                    <td>@evnt.MaxAttendees</td>
                    <td>
                        <button class="btn btn-primary" @onclick="(() => OnEdit.InvokeAsync(evnt.Id))">Edit</button>
                    </td>
                </tr>
        }
    </tbody>
</table>
@code {
    // EventList takes a list of event objects as parameter to be displayed
    [Parameter]
    public List<Event> Events { get; set; } = [];

    // Callback that is called when the user clicks the Edit button for an event.
    // This callback takes the event ID as a parameter and can be used to handle
    // editing of the event in the parent component.
    [Parameter]
    public EventCallback<string> OnEdit { get; set; }

}
