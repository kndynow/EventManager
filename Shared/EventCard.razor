@using EventManager.Client.Models

<div class="card h-100">
    <img src="@Event.ImageUrl" class="card-img-top" alt="@Event.Name">
    <div class="card-body">
        <h5 class="card-title">@Event.Name</h5>
        <p class="card-text">@Event.ShortDescription</p>
        <p class="card-text">
            <small class="text-muted">
                <i class="bi bi-calendar"></i> @Event.Start.DayOfWeek - @(Event.Start.Date == Event.End.Date ? 
                    Event.Start.ToString("MMMM d, yyyy") : 
                    $"{Event.Start.ToString("MMMM d")} - {Event.End.ToString("MMMM d, yyyy")}")
            </small>
        </p>
        <p class="card-text">
            <small class="text-muted">
                <i class="bi bi-geo-alt"></i> @Event.Location
            </small>
        </p>
        <p class="card-text">
            <small class="text-muted">
                <i class="bi bi-ticket-perforated"></i> @Event.Price.ToString("N0") Kr
            </small>
        </p>
        <div class="d-flex justify-content-between align-items-center">
            <a href="/events/@Event.Id" class="btn btn-primary">View Details</a>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Event Event { get; set; }
} 